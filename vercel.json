{
    "version": 2,
    "builds": [
        {
            "src": "api/server.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "api/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "functions": {
        "api/server.ts": {
            "maxDuration": 30
        }
    }
}